<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>
<%- include('../partials/bottom-nav') %>

<main class="main-content form-container-centered pb-24 md:pb-0">
    <div class="card-form mx-2 md:mx-auto">
        <header class="mb-6 text-center">
            <h2 class="page-title uppercase tracking-tight">Nueva Operación</h2>
        </header>

        <form action="/movimientos/crear" method="POST" class="space-y-4">
            <div>
                <label class="form-label">Monto ($)</label>
                <input type="number" step="0.01" name="monto" required autofocus 
                    inputmode="decimal" class="input-xl">
            </div>

            <div class="grid grid-cols-1 gap-4">
                <div>
                    <label class="form-label">Categoría</label>
                    <select name="categoria_id" required class="input-field py-3 text-base">
                        <option value="" disabled selected>Seleccionar...</option>
                        <% ['Ingreso', 'Egreso', 'Gasto'].forEach(tipo => { %>
                            <optgroup label="<%= tipo.toUpperCase() %>">
                                <% categorias[tipo].forEach(cat => { %>
                                    <option value="<%= cat.id %>"><%= cat.nombre %></option>
                                <% }) %>
                            </optgroup>
                        <% }) %>
                    </select>
                </div>
                
                <div>
                    <label class="form-label">Fecha</label>
                    <input type="date" name="fecha_operacion" required 
                        value="<%= new Date().toISOString().split('T')[0] %>" 
                        class="input-field py-3">
                </div>
            </div>

            <div>
                <label class="form-label">Descripción</label>
                <textarea name="descripcion" rows="2" class="input-field"></textarea>
            </div>

            <button type="submit" class="btn-xl w-full">
                Registrar Operación
            </button>
        </form>
    </div>
</main>

</div> </body>
</html>